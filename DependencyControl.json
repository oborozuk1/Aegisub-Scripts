                "main": {
                    "requiredModules": [
                        {
                            "moduleName": "ILL.ILL",
                            "feed": "@{feed:ILL}",
                            "version": "1.5.7"
                        }
                    ],
                    "files": [
                        {
                            "name": ".moon",
                            "url": "@{fileBaseUrl}@{fileName}",
                            "sha1": "5563904b6119f021da32d9fed2f367099def5308"
                        }
                    ],
                    "version": "0.2.2",
                    "released": "2025-07-17",
                    "default": true
                }
            },
            "changelog": {
                "0.2.2": [
                    "Improve margin adjustment performance"
                ],
                "0.2.0": [
                    "Initial release"
                ]
            },
            "author": "Oborozuki",
            "url": "@{baseUrl}#@{scriptName}",
            "fileBaseUrl": "@{fileBaseUrl}/macros/@{namespace}",
            "name": "Margin Adjuster"
