                "main": {
                    "requiredModules": [
                        {
                            "moduleName": "aka.config",
                            "feed": "@{feed:Akatsumekusa}",
                            "version": "1.0.14"
                        }
                    ],
                    "files": [
                        {
                            "name": ".moon",
                            "url": "@{fileBaseUrl}@{fileName}",
                            "sha1": "9d666c9174c5c11534c4a43c033868aa33b2b376"
